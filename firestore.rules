rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for testing
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
      allow options: if true;
    }
  }
} 